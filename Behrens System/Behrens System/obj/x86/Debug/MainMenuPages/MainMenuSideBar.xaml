<Page
    x:Class="Behrens_System.MainMenuSideBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Behrens_System"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <SplitView x:ConnectionId='1' Name="splitMainMenu"
               CompactPaneLength="50"
               IsPaneOpen="False"
               DisplayMode="CompactInline"
               OpenPaneLength="350"
               BorderBrush="#172A33;"
               BorderThickness="3">
        <SplitView.Pane>
            <Grid Background="White" 
                  BorderBrush="#172A33;" 
                  BorderThickness="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="298"/>
                </Grid.ColumnDefinitions>

                <HyperlinkButton x:ConnectionId='2' Name="btnBack" 
                                 Content="&#xE72B;" 
                                                       
                                 Grid.Row="0" 
                                 Grid.Column="0" 
                                 Style="{StaticResource hyperlinkbtnSideBar}" />
                <Button x:ConnectionId='3' Name="btnOpen" 
                        Content="&#xE700;" 
                                                   
                        Grid.Row="1" 
                        Grid.Column="0" 
                        Style="{StaticResource btnSideBar}" />
                <Button x:ConnectionId='4' Name="btnHome" 
                        Content="&#xE80F;" 
                                                   
                        Grid.Row="2" 
                        Grid.Column="0"
                        Style="{StaticResource btnSideBar}"  />
                <Button x:ConnectionId='5' Name="btnQuotes" 
                                               
                        Content="&#xE7C3;" 
                        Grid.Row="3" 
                        Grid.Column="0" 
                        Style="{StaticResource btnSideBar}">
                </Button>
                <Button x:ConnectionId='6' Name="btnSalesOrders"
                                                    
                        Content="&#xE716;" 
                        Grid.Row="4" 
                        Grid.Column="0" 
                        Style="{StaticResource btnSideBar}">
                </Button>
                <Button x:ConnectionId='7' Name="btnProjects"
                                                 
                        Content="&#xE70F;"  
                        Grid.Row="5" 
                        Grid.Column="0" 
                        Style="{StaticResource btnSideBar}">
                </Button>
                <Button x:ConnectionId='8' Name="btnPurchaseOrders"
                                                       
                        Content="&#xE70F;"  
                        Grid.Row="6" 
                        Grid.Column="0" 
                        Style="{StaticResource btnSideBar}">
                </Button>
                <Button x:ConnectionId='9' Name="btnCustomers" 
                        Content="&#xE716;" 
                                                   
                        Grid.Row="7" 
                        Grid.Column="0" 
                        Style="{StaticResource btnSideBar}" >
                </Button>
                <Button x:ConnectionId='10' Name="btnProducts" 
                        Content="&#xE786;" 
                                                  
                        Grid.Row="8" 
                        Grid.Column="0" 
                        Style="{StaticResource btnSideBar}" />
                <Button x:ConnectionId='11' Name="btnCompany" 
                        Content="&#xE786;" 
                                                 
                        Grid.Row="9" 
                        Grid.Column="0" 
                        Style="{StaticResource btnSideBar}" />
                <Button x:ConnectionId='12' Name="btnSettings" 
                        Content="&#xE786;" 
                                                  
                        Grid.Row="12" 
                        Grid.Column="0" 
                        Style="{StaticResource btnSideBar}" />
                <Button x:ConnectionId='13' Name="btnUserProfile" 
                        Content="&#xE786;" 
                                                     
                        Grid.Row="13" 
                        Grid.Column="0" 
                        Style="{StaticResource btnSideBar}" />
                <Button x:ConnectionId='14' Name="btnLogOut" 
                        Content="&#xE8F8;" 
                                               
                        Grid.Row="14" 
                        Grid.Column="0" 
                        Style="{StaticResource btnSideBar}" />
                <Button x:ConnectionId='15' Name="btnExit" 
                        Content="&#xE711;" 
                                             
                        Grid.Row="15" 
                        Grid.Column="0" 
                        Style="{StaticResource btnSideBar}" />

                <Button x:ConnectionId='16' Name="btnBack2" 
                        Content="Back" 
                                              
                        Grid.Row="0" 
                        Grid.Column="1"  
                        Style="{StaticResource btnSideBar2}"/>
                <Button x:ConnectionId='17' Name="btnHome2" 
                        Content="Home" 
                        Grid.Row="2" 
                        Grid.Column="1" 
                        Style="{StaticResource btnSideBar2}">
                </Button>
                <Button x:ConnectionId='18' Name="btnQuotes2"
                                               
                        Content="Quotes" 
                        Grid.Row="3" 
                        Grid.Column="1" 
                        Style="{StaticResource btnSideBar2}">
                </Button>
                <Button x:ConnectionId='19' Name="btnSalesOrders2"
                                                    
                        Content="Sales Orders" 
                        Grid.Row="4" 
                        Grid.Column="1" 
                        Style="{StaticResource btnSideBar2}">
                </Button>
                <Button x:ConnectionId='20' Name="btnProjects2" 
                                                 
                        Content="Projects" 
                        Grid.Row="5" 
                        Grid.Column="1" 
                        Style="{StaticResource btnSideBar2}">
                </Button>
                <Button x:ConnectionId='21' Name="btnPurchaseOrders2" 
                                                       
                        Content="Purchase Orders" 
                        Grid.Row="6" 
                        Grid.Column="1"  
                        Style="{StaticResource btnSideBar2}">
                </Button>
                <Button x:ConnectionId='22' Name="btnCustomers2" 
                        Content="Customers" 
                                                   
                        Grid.Row="7" 
                        Grid.Column="1"  
                        Style="{StaticResource btnSideBar2}"/>
                <Button x:ConnectionId='23' Name="btnProducts2" 
                        Content="Products" 
                                                  
                        Grid.Row="8" 
                        Grid.Column="1" 
                        Style="{StaticResource btnSideBar2}"/>
                <Button x:ConnectionId='24' Name="btnCompany2" 
                        Content="Company" 
                                                 
                        Grid.Row="9" 
                        Grid.Column="1" 
                        Style="{StaticResource btnSideBar2}"/>
                <Button x:ConnectionId='25' Name="btnSettings2" 
                        Content="Settings" 
                                                  
                        Grid.Row="12" 
                        Grid.Column="1" 
                        Style="{StaticResource btnSideBar2}"/>
                <Button x:ConnectionId='26' Name="btnUserProfile2" 
                        Content="User Profile" 
                                                     
                        Grid.Row="13" 
                        Grid.Column="1" 
                        Style="{StaticResource btnSideBar2}"/>
                <Button x:ConnectionId='27' Name="btnLogOut2" 
                        Content="Log Out" 
                                               
                        Grid.Row="14" 
                        Grid.Column="1" 
                        Style="{StaticResource btnSideBar2}"/>
                <Button x:ConnectionId='28' Name="btnExitSystem2" 
                        Content="Exit System" 
                                              
                        Grid.Row="15" 
                        Grid.Column="1"
                        Style="{StaticResource btnSideBar2}"/>
            </Grid>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid Background="White" 
                  BorderBrush="#172A33;" 
                  BorderThickness="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <StackPanel HorizontalAlignment="Stretch" 
                            Background="#538DD5;" 
                            Orientation="Horizontal" BorderBrush="Black" BorderThickness="1">
                    <StackPanel Margin="0,0,0,0" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Stretch" 
                                Background="White">
                        <Image Source="ms-appx:///Assets/CompanyLogos/CompanyLogoLandscape.png" Height="30" Margin="5,5,5,5"></Image>
                    </StackPanel>
                    <TextBlock Margin="20,0,0,0" 
                               FontSize="18" 
                               FontFamily="Segoe UI" 
                               FontWeight="Light" 
                               Text="Behrens System" 
                               VerticalAlignment="Center" 
                               Foreground="White"></TextBlock>
                </StackPanel>
                <StackPanel Margin="0,5,5,5" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Stretch">
                    <SearchBox Background="AliceBlue" VerticalAlignment="Center" HorizontalAlignment="Right" Width="300" Height="40" SearchHistoryEnabled="True" PlaceholderText="Search" FontFamily="Segoe UI" FontWeight="Light"/>
                </StackPanel>

                <Frame x:ConnectionId='29' Name="MainMenuFrame" 
                       Grid.Row="1">

                </Frame>
                <Grid Grid.Row="2" 
                      Background="AliceBlue" 
                      BorderBrush="#172A33;" 
                      BorderThickness="0.3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image Source="ms-appx:///Assets/CompanyLogos/HealthcareTextLogo.png" 
                           Grid.Column="0" 
                           Margin="5"/>
                    <Image Source="ms-appx:///Assets/CompanyLogos/HealthcareTextLogo.png" 
                           Grid.Column="1" 
                           Margin="5"/>
                    <Image Source="ms-appx:///Assets/CompanyLogos/HealthcareTextLogo.png" 
                           Grid.Column="2" 
                           Margin="5"/>
                    <Image Source="ms-appx:///Assets/CompanyLogos/HealthcareTextLogo.png" 
                           Grid.Column="3" 
                           Margin="5"/>
                    <Image Source="ms-appx:///Assets/CompanyLogos/HealthcareTextLogo.png" 
                           Grid.Column="4" 
                           Margin="5"/>
                </Grid>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>

