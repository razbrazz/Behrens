<Page
    x:Class="Behrens_System.View.Projects.Projects"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Behrens_System.View.Projects"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Projects" 
                   Style="{StaticResource txtMenuHeader}" 
                   Grid.Column="1" 
                   Grid.ColumnSpan="2"/>
        <TextBlock Text="Tasks:"
                   Style="{StaticResource txtMenuText}"
                   Grid.Column="1"
                   Grid.Row="1"/>
        <StackPanel Grid.Row="1"
                    Grid.Column="2"
                    VerticalAlignment="Center" 
                    Orientation="Horizontal">
            <Button x:ConnectionId='5' Name="btnNewProject" 
                                               
                    Style="{StaticResource btnMenuButtonMain}"
                    Margin="20,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center" Grid.Row="0" FontSize="45" HorizontalAlignment="Center" Text="&#xE710;" FontFamily="Segoe MDL2 Assets" Margin="0,0,0,20"/>
                    <TextBlock VerticalAlignment="Center" Grid.Row="1" TextAlignment="Center">New Project<LineBreak/>Manual Entry</TextBlock>
                </Grid>
            </Button>
            <Button x:ConnectionId='6' Name="btnNewProjectQ"
                                                
                    Style="{StaticResource btnMenuButtonMain}"
                    Margin="20,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center" Grid.Row="0" FontSize="45" HorizontalAlignment="Center" Text="&#xE710;" FontFamily="Segoe MDL2 Assets" Margin="0,0,0,20"/>
                    <TextBlock VerticalAlignment="Center" Grid.Row="1" TextAlignment="Center">New Project<LineBreak/>from Quote</TextBlock>
                </Grid>
            </Button>
            <Button x:ConnectionId='7' Name="btnViewProject"
                                                
                    Style="{StaticResource btnMenuButtonMain}"
                    Margin="20,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center" Grid.Row="0" FontSize="40" HorizontalAlignment="Center" Text="&#xE71E;" FontFamily="Segoe MDL2 Assets" Margin="0,0,0,20"/>
                    <TextBlock VerticalAlignment="Center" Grid.Row="1" TextAlignment="Center">View Project<LineBreak/></TextBlock>
                </Grid>
            </Button>
        </StackPanel>
        <TextBlock Style="{StaticResource txtMenuText}"
                   Grid.Row="2"
                   Grid.Column="1">
                   Workflow<LineBreak/>Reports:
        </TextBlock>
        <StackPanel Grid.Row="2" 
                    Grid.Column="2" 
                    VerticalAlignment="Center" 
                    Orientation="Horizontal">
            <Button x:ConnectionId='1' Name="btnViewAllProjects" 
                                                    
                    Margin="20,0,0,0"
                    Style="{StaticResource btnMenuButtonReports}">
                <StackPanel VerticalAlignment="Bottom">
                    <TextBlock FontSize="30" HorizontalAlignment="Center" Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets"></TextBlock>
                    <TextBlock TextAlignment="Center">View All<LineBreak/>Projects</TextBlock>
                </StackPanel>
            </Button>
            <Button x:ConnectionId='2' Name="btnViewProjectsProgress"
                                                         
                    Margin="20,0,0,0"
                    Style="{StaticResource btnMenuButtonReports}">
                <StackPanel VerticalAlignment="Bottom">
                    <TextBlock FontSize="30" HorizontalAlignment="Center" Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets"></TextBlock>
                    <TextBlock TextAlignment="Center">View Projects<LineBreak/>in Progress</TextBlock>
                </StackPanel>
            </Button>
            <Button x:ConnectionId='3' Name="btnViewQuotesSent"
                    Margin="20,0,0,0"
                    Style="{StaticResource btnMenuButtonReports}">
                <StackPanel VerticalAlignment="Bottom">
                    <TextBlock FontSize="30" HorizontalAlignment="Center" Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets"></TextBlock>
                    <TextBlock TextAlignment="Center">View Quotes<LineBreak/>Outstanding</TextBlock>
                </StackPanel>
            </Button>
            <Button x:ConnectionId='4' Name="btnViewQuotesCalledIn"
                    Margin="20,0,0,0"
                    Style="{StaticResource btnMenuButtonReports}">
                <StackPanel VerticalAlignment="Bottom">
                    <TextBlock FontSize="30" HorizontalAlignment="Center" Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets"></TextBlock>
                    <TextBlock TextAlignment="Center">View Quotes<LineBreak/>Called In</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
        <TextBlock Style="{StaticResource txtMenuText}"
                   Grid.Row="3"
                   Grid.Column="1">
                   Analysis<LineBreak/>Reports:
        </TextBlock>
        <StackPanel Grid.Row="3" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Orientation="Horizontal">
        </StackPanel>
    </Grid>
</Page>

