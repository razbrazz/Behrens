<Page
    x:Class="Behrens_System.View.SalesOrders.SalesOrderMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Behrens_System.View.SalesOrders"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Sales Orders" 
                   Style="{StaticResource txtMenuHeader}" 
                   Grid.Column="1" 
                   Grid.ColumnSpan="2"/>
        <TextBlock Text="Tasks:"
                   Style="{StaticResource txtMenuText}"
                   Grid.Column="1"
                   Grid.Row="1"/>
        <StackPanel Grid.Row="1"
                    Grid.Column="2"
                    VerticalAlignment="Center" 
                    Orientation="Horizontal">
            <Button x:ConnectionId='5' Name="btnViewSalesOrder"
                                                   
                    Style="{StaticResource btnMenuButtonMain}"
                    Margin="20,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center" Grid.Row="0" FontSize="40" HorizontalAlignment="Center" Text="&#xE71E;" FontFamily="Segoe MDL2 Assets" Margin="0,0,0,20"/>
                    <TextBlock VerticalAlignment="Center" Grid.Row="1" TextAlignment="Center">View Sales Order<LineBreak/></TextBlock>
                </Grid>
            </Button>
        </StackPanel>
        <TextBlock Style="{StaticResource txtMenuText}"
                   Grid.Row="2"
                   Grid.Column="1">
                   Workflow<LineBreak/>Reports:
        </TextBlock>
        <StackPanel Grid.Row="2" 
                    Grid.Column="2" 
                    VerticalAlignment="Center" 
                    Orientation="Horizontal">
            <Button x:ConnectionId='1' Name="btnViewAllSalesOrders" 
                                                       
                    Margin="20,0,0,0"
                    Style="{StaticResource btnMenuButtonReports}">
                <StackPanel VerticalAlignment="Bottom">
                    <TextBlock FontSize="30" HorizontalAlignment="Center" Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets"></TextBlock>
                    <TextBlock TextAlignment="Center">View All<LineBreak/>Sales Orders</TextBlock>
                </StackPanel>
            </Button>
            <Button x:ConnectionId='2' Name="btnViewSalesOrdersProgress"
                                                            
                    Margin="20,0,0,0"
                    Style="{StaticResource btnMenuButtonReports}">
                <StackPanel VerticalAlignment="Bottom">
                    <TextBlock FontSize="30" HorizontalAlignment="Center" Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets"></TextBlock>
                    <TextBlock TextAlignment="Center">View SOs<LineBreak/>in Progress</TextBlock>
                </StackPanel>
            </Button>
            <Button x:ConnectionId='3' Name="btnViewSalesOrdersDespatched"
                                                              
                    Margin="20,0,0,0"
                    Style="{StaticResource btnMenuButtonReports}">
                <StackPanel VerticalAlignment="Bottom">
                    <TextBlock FontSize="30" HorizontalAlignment="Center" Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets"></TextBlock>
                    <TextBlock TextAlignment="Center">View SOs<LineBreak/>Despatched</TextBlock>
                </StackPanel>
            </Button>
            <Button x:ConnectionId='4' Name="btnViewSalesOrdersInvoiced"
                                                            
                    Margin="20,0,0,0"
                    Style="{StaticResource btnMenuButtonReports}">
                <StackPanel VerticalAlignment="Bottom">
                    <TextBlock FontSize="30" HorizontalAlignment="Center" Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets"></TextBlock>
                    <TextBlock TextAlignment="Center">View SOs<LineBreak/>Invoiced</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
        <TextBlock Style="{StaticResource txtMenuText}"
                   Grid.Row="3"
                   Grid.Column="1">
                   Analysis<LineBreak/>Reports:
        </TextBlock>
        <StackPanel Grid.Row="3" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Orientation="Horizontal">
        </StackPanel>
    </Grid>
</Page>

