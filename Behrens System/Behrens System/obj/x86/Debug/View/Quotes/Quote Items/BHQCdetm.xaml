<Page
    x:Class="Behrens_System.View.Quotes.Quote_Items.BHQCdetm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Behrens_System.View.Quotes.Quote_Items"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Left" 
                    VerticalAlignment="Bottom"
                    Grid.Column="1"
                    Orientation="Horizontal">
            <Button x:ConnectionId='4' Name="btnQuoteHeader" 
                    Content="Quote Header"
                    Height="50"
                    Width="120" 
                    Margin="0,0,0,0"
                    Background="SkyBlue"/>
            <Button x:ConnectionId='5' Name="btnGetCostings" 
                    Content="Get Cost/Price"
                    Height="50"
                    Width="120" 
                    Margin="10,0,0,0"
                    Background="SkyBlue"/>
            <Button x:ConnectionId='6' Name="btnSaveQuote" 
                    Content="Save Quote"
                    Margin="10,0,0,0"
                    Height="50"
                    Width="120"
                    Background="SkyBlue"/>
            <Button x:ConnectionId='7' Name="btnExitQuote" 
                    Content="Exit Quote"
                    Height="50"
                    Width="120" 
                    Margin="10,0,0,0"
                    Background="Tomato"/>
        </StackPanel>
        <HyperlinkButton Content="Fabric Curtains" 
                         Grid.Row="1" 
                         Grid.Column="1" 
                         Style="{StaticResource txtHLHeaderText}"/>
        <StackPanel Grid.Row="2" Grid.Column="1"/>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Quote Number:" 
                       Style="{StaticResource txtItemText}"/>
            <TextBlock Text="Quote Subject:"
                       Style="{StaticResource txtItemText}"
                       Grid.Row="1"
                       Grid.Column="0"/>
            <TextBlock Text="Quote Status"
                       Style="{StaticResource txtItemText}"
                       Grid.Row="2"
                       Grid.Column="0"/>
            <TextBlock x:ConnectionId='1' Name="tbQuoteNumber"
                     Style="{StaticResource txtItemText}"
                     Grid.Column="1" />
            <TextBlock x:ConnectionId='2' Name="tbQuoteSubject"
                     Style="{StaticResource txtItemText}"
                     Grid.Column="1"
                     Grid.Row="1"/>
            <TextBlock x:ConnectionId='3' Name="tbQuoteStatus"
                     Style="{StaticResource txtItemText}"
                     Grid.Column="1" 
                     Grid.Row="2"/>
        </Grid>
        <Grid Grid.Row="3" Grid.RowSpan="2" Grid.Column="1" 
              Margin="0,20,0,0" 
              BorderBrush="Black" 
              BorderThickness="0.5">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" 
                        Grid.ColumnSpan="2"
                        Margin="0,0,0,10">
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Content="Details"
                        Background="LightGreen" 
                        BorderBrush="Black" 
                        BorderThickness="0.5"
                        Width="150"/>
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Content="Fabric"
                        Background="White"
                        BorderBrush="Black" 
                        BorderThickness="0.5" 
                        Width="150"/>
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Content="Extras"
                        Background="White"
                        BorderBrush="Black" 
                        BorderThickness="0.5" 
                        Width="150"/>
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Stretch" 
                        Content="Costings"
                        Background="White"
                        BorderBrush="Black" 
                        BorderThickness="0.5"
                        Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  
                        HorizontalAlignment="Left"
                        Margin="0,0,0,10"
                        Grid.Row="1" Grid.ColumnSpan="2">
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Content="Add Room Next"
                        Background="White" 
                        BorderBrush="Black" 
                        BorderThickness="0.5"
                        Width="125"/>
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Content="Add Room Last"
                        Background="White"
                        BorderBrush="Black" 
                        BorderThickness="0.5" 
                        Width="125"/>
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Stretch" 
                        Content="Add Option"
                        Background="White"
                        BorderBrush="Black" 
                        BorderThickness="0.5"
                        Width="125"/>
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Stretch" 
                        Content="Add Set"
                        Background="White"
                        BorderBrush="Black" 
                        BorderThickness="0.5"
                        Width="125"/>
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Stretch" 
                        Content="Add Tracking"
                        Background="White"
                        BorderBrush="Black" 
                        BorderThickness="0.5"
                        Width="125"/>
            </StackPanel>
            <GridView Grid.Row="2" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="0.5"/>
        </Grid>
    </Grid>
</Page>

