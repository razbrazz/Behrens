<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Behrens_System.ResourceDictionarys">

    <Style x:Key="btnSideBar" TargetType="Button">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="#172A33;" />
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="AutomationProperties.Name" Value="Favourite"/>
    </Style>
    <Style x:Key="hyperlinkbtnSideBar" TargetType="HyperlinkButton">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="#172A33;" />
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="AutomationProperties.Name" Value="Favourite"/>
    </Style>
    <Style x:Key="btnSideBar2" TargetType="Button">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Foreground" Value="#172A33;"/>
        <Setter Property="Background" Value="White" />
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    <Style x:Key="btnMainPage" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontSize" Value="40" />
        <Setter Property="Foreground" Value="#172A33;"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#172A33;"/>
        <Setter Property="BorderThickness" Value="0.3"/>
    </Style>
    
</ResourceDictionary>

